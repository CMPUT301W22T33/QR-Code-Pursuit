<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_marginTop="52dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="LeaderBoard"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sort_by_text"
        android:layout_width="53dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="110dp"
        android:text="Sort by:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/region_text"
        android:layout_width="48dp"
        android:layout_height="31dp"
        android:text="Region:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/sort_by_text"
        app:layout_constraintEnd_toStartOf="@+id/region_button" />

    <Button
        android:id="@+id/sort_by_button"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:text="V"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/sort_by_text"
        app:layout_constraintStart_toEndOf="@+id/sort_by_text" />

    <Button
        android:id="@+id/region_button"
        android:layout_width="59dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:text="V"
        app:layout_constraintBottom_toBottomOf="@+id/region_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="569dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>